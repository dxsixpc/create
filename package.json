{
  "name": "@dxsixpc/create",
  "version": "0.0.4",
  "description": "脚手架",
  "homepage": "https://dxsixpc.github.io/create",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxsixpc/create"
  },
  "license": "MIT",
  "author": {
    "name": "dxsixpc",
    "email": "desixpc@gmail.com"
  },
  "main": "dist/index.mjs",
  "bin": {
    "@dxsixpc/create": "dist/index.mjs"
  },
  "files": [
    "dist",
    "template"
  ],
  "scripts": {
    "build": "father build",
    "build:watch": "father dev",
    "commit": "git add . && git-cz",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "dev": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "doctor": "father doctor",
    "prepare": "husky install && dumi setup",
    "prepublishOnly": "father doctor && npm run build",
    "start": "npm run dev"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.20.13",
    "@dxsixpc/create": "^0.0.4-beta.2",
    "chalk": "^5.2.0",
    "commander": "^10.0.0",
    "conf": "^11.0.1",
    "execa": "^6.1.0",
    "fs-extra": "^11.1.0",
    "git-config-path": "^2.0.0",
    "github-username": "^7.0.0",
    "globby": "^13.1.3",
    "inquirer": "^8.2.5",
    "make-dir": "^3.0.2",
    "ora": "^6.1.2",
    "p-each-series": "^3.0.0",
    "parse-git-config": "^3.0.0",
    "validate-npm-package-name": "^5.0.0",
    "which": "^3.0.0"
  },
  "devDependencies": {
    "@dxsixpc/configs": "^0.2.6",
    "dumi": "^2.0.2",
    "father": "^4.1.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
